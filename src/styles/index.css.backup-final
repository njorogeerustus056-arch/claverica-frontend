/* ============================================= */
/* 7. FIX FOR SCREENSHOT ISSUE                  */
/* ============================================= */
/* This fixes the card container styling issue */
.dashboard-container {
  @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8;
}

.dashboard-grid {
  @apply grid grid-cols-1 lg:grid-cols-3 gap-6;
}

.dashboard-main-card {
  @apply bg-white rounded-2xl p-6 shadow-theme-lg border border-gray-200 lg:col-span-2;
}

.dashboard-sidebar {
  @apply space-y-6;
}

/* ============================================= */
/* 8. FINANCIAL LAYOUT UTILITIES                */
/* ============================================= */
.financial-grid {
  @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4;
}

.transaction-grid {
  @apply grid grid-cols-1 lg:grid-cols-3 gap-6;
}

.portfolio-grid {
  @apply grid grid-cols-1 lg:grid-cols-2 gap-6;
}

/* ============================================= */
/* 9. RESPONSIVE FINANCIAL BREAKPOINTS          */
/* ============================================= */
@media (max-width: 640px) {
  .financial-grid {
    @apply grid-cols-1 gap-3;
  }
  
  .transaction-grid {
    @apply grid-cols-1 gap-4;
  }
  
  .portfolio-grid {
    @apply grid-cols-1 gap-4;
  }
}

@media (min-width: 641px) and (max-width: 1024px) {
  .financial-grid {
    @apply grid-cols-2 gap-4;
  }
  
  .transaction-grid {
    @apply grid-cols-2 gap-5;
  }
}

/* ============================================= */
/* 10. LAYOUT-SPECIFIC FIXES                    */
/* ============================================= */
.dashboard-layout {
  overflow-y: hidden !important;
  height: 100vh !important;
}

.auth-layout {
  min-height: 100vh;
  overflow-y: auto;
}